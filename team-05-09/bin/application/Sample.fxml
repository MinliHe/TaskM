<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <top>
      <HBox prefHeight="58.0" prefWidth="131.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="203.0" text="Task">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Button fx:id="add" mnemonicParsing="false" onAction="#onAdd" prefHeight="59.0" prefWidth="52.0" text="Add" />
            <TextField fx:id="task" prefHeight="55.0" prefWidth="149.0" />
         </children>
      </HBox>
   </top>
   <left>
      <ListView fx:id="taskView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
